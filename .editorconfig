# EditorConfig helps maintain consistent coding styles for the Saras luxury fitness app
# See: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,json,css,scss}]
indent_size = 2

[package.json]
indent_size = 2